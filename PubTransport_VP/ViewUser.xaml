<Window x:Class="PubTransport_VP.ViewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PubTransport_VP"
        mc:Ignorable="d"
        Title="ViewUser" Height="450" Width="644">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGridUsers" AutoGenerateColumns="False" ItemsSource="{Binding}" Margin="10,10,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID_User" Binding="{Binding ID_User}"/>
                <DataGridTextColumn Header="UserF" Binding="{Binding UserF}"/>
                <DataGridTextColumn Header="UserI" Binding="{Binding UserI}"/>
                <DataGridTextColumn Header="UserO" Binding="{Binding UserO}"/>
                <DataGridTextColumn Header="User_login" Binding="{Binding User_login}"/>
                <DataGridTextColumn Header="User_pswd" Binding="{Binding User_pswd}"/>
                <DataGridTextColumn Header="RoleName" Binding="{Binding RoleName}"/>
                <DataGridTextColumn Header="GroupName" Binding="{Binding GroupName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
