<Window x:Class="PubTransport_VP.ViewRNum"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PubTransport_VP"
        mc:Ignorable="d"
        Title="ViewRNum" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGridRNum" AutoGenerateColumns="False" ItemsSource="{Binding}" Margin="10,10,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Transport_Type" Binding="{Binding TransportName}"/>
                <DataGridTextColumn Header="Route_Number" Binding="{Binding Route_number}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
